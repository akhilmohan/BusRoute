<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
xmlns:tools="http://schemas.android.com/tools">

<ImageView
    android:id="@+id/imgVline"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginTop="40dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    app:srcCompat="@drawable/vertical_line" />
<ImageView
    android:id="@+id/imgDotStart"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginTop="-25dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    app:srcCompat="@drawable/dot" />
<TextView
    tools:text="@string/app_name"
    android:id="@+id/txtStop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/imgVline"
    android:layout_toRightOf="@+id/imgVline"
    android:layout_toEndOf="@+id/imgVline" />
    <ImageView
        android:id="@+id/imgDotEnd"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="-55dp"
        android:layout_below="@+id/imgVline"
        app:srcCompat="@drawable/dot" />
</RelativeLayout>